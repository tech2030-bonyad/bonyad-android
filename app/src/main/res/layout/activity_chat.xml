<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.Activity.ChatActivity">
    <data class="ChatListViewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.ChatListViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:onClick="@{ () -> model.back() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:rotationY="180"
                android:layout_marginStart="26dp"
                android:layout_gravity="center|start"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                bind:imageUrl="@{model.img}"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:text="@{model.name}"
                tools:text="أحمد محمود"
                android:fontFamily="@font/cairosemibold"
                android:textColor="@color/darkblack"/>
        </LinearLayout>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:layout_marginStart="20dp"
           android:layout_marginEnd="20dp"
           android:layout_marginTop="40dp"
           android:layout_marginBottom="20dp">
           <com.todkars.shimmer.ShimmerRecyclerView
               android:id="@+id/chatList"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               app:shimmer_recycler_layout="@layout/item_special1"
               app:shimmer_recycler_item_count="5"
               bind:chat="@{model.chatList}"
               bind:fragment="@{model.activity}"
               />
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_gravity="center"
               android:visibility="@{model.isloading || model.chatList.size() > 0 ? View.GONE : View.VISIBLE}"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:background="@drawable/bonyad_logo_08_1"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/darkblack"
                   android:textSize="16sp"
                   android:text="@string/there_are_no_messages_available"
                   android:layout_gravity="center"
                   android:layout_marginTop="15dp"
                   tools:text = "No result"/>
           </LinearLayout>
           <ProgressBar
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:indeterminateTintMode="src_atop"
               android:indeterminateTint="@color/lightblue"
               android:visibility="@{model.isloading ? View.VISIBLE : View.GONE}"
               android:layout_gravity="center"/>
       </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/message"
                android:onTextChanged="@{model.onmessageChanged()}"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:hint="@string/write_your_message"
                android:textColorHint="#666666"
                android:textSize="12sp"
                android:fontFamily="@font/cairoregular"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"/>
            <ImageView
                android:onClick="@{ () -> model.validateInput() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_send333"
                android:rotationY="180"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</layout>
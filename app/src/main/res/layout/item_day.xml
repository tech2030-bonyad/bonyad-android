<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data class="DayviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.technical.DayViewModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:onClick="@{ () -> model.clickitem() }"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        bind:cardBackgroundColor="@{model.color}"
        bind:cardCornerRadius="7dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:text="@{model.onservse.title}"
            android:textColor="@{model.isselect ? @color/white : @color/darkgray1}"
            android:layout_gravity="center"
            android:fontFamily="@font/cairoregular"/>
    </androidx.cardview.widget.CardView>
</layout>
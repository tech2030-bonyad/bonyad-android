<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data class="AddressesiewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.user.AddressesViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rec_strockblue2"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|top"
                android:background="@drawable/ic_location2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="120dp"
                android:text="@{model.onservse.addressTxt}"
                android:layout_marginStart="8dp"
                android:layout_gravity="top"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/cairosemibold"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:onClick="@{ () -> model.edit() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rotationY="180"
                android:layout_gravity="center|top"
                android:background="@drawable/ic_edit223"/>
            <ImageView
                android:onClick="@{ () -> model.delete() }"
                android:visibility="@{model.onservse.is_default() == 1 ? View.GONE : View.VISIBLE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_gravity="center|top"
                android:background="@drawable/ic_delete3"/>


        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp">
            <TextView
                android:visibility="@{model.onservse.is_default() == 1 ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_address"
                android:layout_gravity="center|start"
                android:textColor="@color/lightblue"
                android:fontFamily="@font/cairosemibold"
                android:textSize="12sp"/>
            <ImageView
                android:onClick="@{ () -> model.setdeult() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:background="@{model.onservse.is_default() == 1 ? @drawable/ic_toggle : @drawable/ic_toggle2}"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/lightgray"/>
    </LinearLayout>
</layout>
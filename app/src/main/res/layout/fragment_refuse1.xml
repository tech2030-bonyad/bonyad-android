<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.RatingdialogFragment">
    <data class="Refuse1ViewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.technical.Refusedialog1ViewModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:onClick="@{ () -> model.dismiss() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_close"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:background="@drawable/rec_strockgray">
                <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:onTextChanged="@{model.oncommentChanged()}"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:gravity="top"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/reason_for_rejection"
                    android:textSize="13sp"
                    android:textColorHint="@color/darkgray"
                    android:fontFamily="@font/cairoregular"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:onClick="@{ () -> model.validateInput() }"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/send"
                    android:textSize="16sp"
                    android:fontFamily="@font/cairosemibold"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
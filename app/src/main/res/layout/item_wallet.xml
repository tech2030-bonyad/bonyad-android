<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="TransactionsviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.TransactionsViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rec_strockblue2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/darkgray"
            android:textSize="14sp"
            android:text="@{model.onservse.formatted_date}"
            android:fontFamily="@font/cairoregular"
            tools:text="24-06-2024"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/darkblack"
            android:textSize="14sp"
            android:text="@{model.body}"
            android:fontFamily="@font/cairoregular"
            tools:text="تم شحن المحفظة بمبلغ 200.00 ر.س عن طريق Apple Pay"/>
    </LinearLayout>
</layout>
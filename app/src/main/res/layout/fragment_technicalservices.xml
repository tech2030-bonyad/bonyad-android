<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.technical.TechnicalservicesFragment">
    <data class="TechnicalserviceviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.technical.TechnicalserviceViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="23dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:textColor="@color/darkblue"
                android:textSize="16sp"
                android:fontFamily="@font/cairosemibold"
                android:textStyle="bold"
                android:text="@string/services1"/>
            <ImageView
                android:layout_width="88dp"
                android:layout_height="38dp"
                android:background="@drawable/bonyad_logo_08_1"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="11dp"
                    android:textColor="@color/darkblue"
                    android:textSize="16sp"
                    android:fontFamily="@font/cairosemibold"
                    android:textStyle="bold"
                    android:text="@string/add"/>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal"
            android:background="@drawable/rec_lightblue1">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_search22"
                android:layout_gravity="center"
                android:rotationY="180"
                android:layout_marginStart="5dp"/>
            <EditText
                android:id="@+id/searchTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/search"
                android:textSize="14sp"
                android:textColor="@color/darkblue"
                android:textColorHint="@color/darkblue"
                android:paddingBottom="5dp"
                android:layout_marginStart="5dp"
                android:gravity="start|center"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/cairoregular"
                android:backgroundTint="@android:color/transparent"/>
        </LinearLayout>
        <com.todkars.shimmer.ShimmerRecyclerView
            android:id="@+id/serviceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="25dp"
            bind:services="@{model.servicesList}"
            bind:fragment="@{model.context}"
          />
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.Activity.technical.AddserviceActivity">
    <data class="MyerviceviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.technical.MyserviceViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp">
                <ImageView
                    android:onClick="@{ () -> model.back() }"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_back"
                    android:rotationY="180"
                    android:layout_marginStart="26dp"
                    android:layout_gravity="center|start"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@string/my_services"
                    android:fontFamily="@font/cairobold"
                    android:textColor="@color/darkblue"/>
            </FrameLayout>
            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/serviceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="25dp"
                bind:shimmer_recycler_layout="@layout/item_services1"
                bind:services1="@{model.servicesList}"
                bind:fragment="@{model.context}"
                bind:shimmer_recycler_item_count="5"
                />
        </LinearLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/lightblue"
            android:visibility="@{model.isloading &amp;&amp; model.servicesList.size() > 0 ? View.VISIBLE : View.GONE}"
            android:layout_gravity="center"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{model.isloading || model.servicesList.size() > 0 ? View.GONE : View.VISIBLE}"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bonyad_logo_08_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblack"
                android:textSize="16sp"
                android:text="@string/there_are_no_services_available"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                tools:text = "No result"/>
        </LinearLayout>
    </FrameLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="RatingViewBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.RatingViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                bind:imageUrl="@{model.onservse.user.avatar}"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="على السيد"
                    android:textSize="14sp"
                    android:fontFamily="@font/cairoregular"
                    android:text="@{model.onservse.user.name}"
                    android:textColor="@color/darkblue"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <RatingBar
                        android:id="@+id/rate"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:progressTint="#8FC3FF"
                        android:rating="@{model.onservse.rating}"
                        android:secondaryProgressTint="@android:color/transparent"
                        android:stepSize="1"
                        android:theme="@style/RatingBar"
                        tools:ignore="RtlCompat" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="على السيد"
                        android:textSize="12sp"
                        android:layout_marginStart="13dp"
                        android:fontFamily="@font/cairoregular"
                        android:text="@{model.onservse.created_at}"
                        android:textColor="@color/darkgray"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="على السيد"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cairoregular"
            android:text="@{model.onservse.comment}"
            android:textColor="@color/darkgray"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="#F2F2F2"/>
    </LinearLayout>
</layout>
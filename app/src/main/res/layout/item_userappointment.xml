<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="UserorderviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.user.OrderViewModel" />
    </data>
    <LinearLayout
        android:onClick="@{ () -> model.clickitem() }"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rec_strockblue2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                bind:imageUrl="@{model.onservse.technician_avatar}"/>
           <LinearLayout
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:layout_gravity="center">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_gravity="center"
                   android:textSize="14sp"
                   android:text="@{model.onservse.technician_name}"
                   tools:text="الحمد للمقالاوت والتوريدات"
                   android:textColor="@color/darkgray"/>
           </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text="@{model.onservse.technical.average_rating}"
                tools:text="4.7"
                android:textColor="@color/darkblue"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_round_star"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:layout_marginStart="8dp"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text="@{'(' + model.onservse.technical.count_rating + ')'}"
                tools:text="(12)"
                android:textColor="@color/darkgray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="7dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_loc3452"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@{model.onservse.address}"
                android:textSize="12sp"
                tools:text="الرياض حي الملز"
                android:textColor="@color/darkgray1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:text="@string/booking_date_and_time"
                android:textColor="#70101010"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairoregular"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:textSize="16sp"
                android:text="@{model.onservse.date}"
                tools:text="31/12/2024 - 9:00 مساءً"
                android:textColor="@color/darkblue"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:onClick="@{ () -> model.reject() }"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:visibility="@{model.onservse.status.value == 1 ? View.VISIBLE : View.GONE}"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/red"
                android:background="@drawable/rec_strockred"
                android:fontFamily="@font/cairobold"
                android:textStyle="bold"
                android:textSize="14sp"/>
            <androidx.cardview.widget.CardView
                android:onClick="@{ () -> model.clickitem() }"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="16dp">
                <TextView
                    android:id="@+id/canceltxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/details1"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:fontFamily="@font/cairobold"
                    android:textSize="14sp"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</layout>
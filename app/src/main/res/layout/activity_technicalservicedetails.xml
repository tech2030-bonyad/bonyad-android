<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.Activity.technical.TechnicalservicedetailsActivity">
    <data class="TechnicalservicedetailsviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.technical.TechnicalservicedetailsViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
                android:onClick="@{ () -> model.back() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:rotationY="180"
                android:layout_marginStart="26dp"
                android:layout_gravity="center|start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/details"
                android:fontFamily="@font/cairobold"
                android:textColor="@color/darkblue"/>
        </FrameLayout>
       <FrameLayout
           android:visibility="@{model.isloading  ? View.GONE : View.VISIBLE}"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1">
           <androidx.core.widget.NestedScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="16dp"
                   android:layout_marginTop="18dp">
                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/images"
                       android:layout_width="match_parent"
                       android:layout_height="160dp"
                       bind:servicesimage="@{model.services}"
                       bind:fragment="@{model.context}"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="5dp"
                       android:layout_marginTop="22dp"
                       android:textSize="20sp"
                       android:text="@{model.servicedata.data.name}"
                       android:fontFamily="@font/cairosemibold"
                       android:textStyle="bold"
                       android:textColor="@color/darkblue"
                       tools:text="عامل بناء"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="5dp"
                       android:layout_marginTop="11dp"
                       android:textSize="16sp"
                       android:text="@string/description"
                       android:fontFamily="@font/cairosemibold"
                       android:textStyle="bold"
                       android:textColor="@color/darkblue" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="5dp"
                       android:layout_marginTop="5dp"
                       android:textSize="13sp"
                       android:text="@{model.servicedata.data.name}"
                       tools:text="@string/description"
                       android:fontFamily="@font/cairoregular"
                       android:textColor="@color/darkgray" />
               </LinearLayout>
           </androidx.core.widget.NestedScrollView>
           <ProgressBar
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:indeterminateTintMode="src_atop"
               android:visibility="@{model.isloading == false  ? View.GONE : View.VISIBLE}"
               android:indeterminateTint="@color/lightblue"
               android:layout_gravity="center"/>
       </FrameLayout>
        <LinearLayout
            android:visibility="@{model.isloading  ? View.GONE : View.VISIBLE}"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rec_strockred1"
                android:textSize="14sp"
                android:text="@string/delete"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/cairosemibold"
                android:textColor="@color/red"/>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairobold"
                    android:text="@string/edit_service"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.Activity.technical.SubscriptionsActivity">
    <data class="PlanviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.technical.SubscriptionsViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
                android:onClick="@{ () -> model.back() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:rotationY="180"
                android:layout_marginStart="26dp"
                android:layout_gravity="center|start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/subscriptions"
                android:fontFamily="@font/cairobold"
                android:textColor="@color/darkblue"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <FrameLayout
                android:onClick="@{ () -> model.settype(1) }"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/cairobold"
                        android:text="@string/packages"
                        android:textColor="@{model.type == 1 ? @color/lightblue : @color/darkgray}"/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:visibility="@{model.type == 1 ? View.VISIBLE : View.INVISIBLE}"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="@color/lightblue"/>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:onClick="@{ () -> model.settype(2) }"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/cairobold"
                        android:text="@string/my_subscriptions"
                        android:textColor="@{model.type == 2 ? @color/lightblue : @color/darkgray}"/>/>
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="2dp"
                        android:visibility="@{model.type == 2 ? View.VISIBLE : View.INVISIBLE}"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="@color/lightblue"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">
            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/packageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{model.type == 1 ? View.VISIBLE : View.INVISIBLE}"
                app:shimmer_recycler_layout="@layout/item_packages"
                bind:plan="@{model.planList}"
                bind:fragment="@{model.activity}"
                app:shimmer_recycler_item_count="5" />
            <LinearLayout
                android:visibility="@{model.type == 2 &amp;&amp; model.mydata.id != null ? View.VISIBLE : View.INVISIBLE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rec_strockblue2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="16dp">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="@{model.mydata.name}"
                            android:fontFamily="@font/cairosemibold"
                            tools:text="باقة بنياد"
                            android:textColor="@color/darkgray"/>
                    </LinearLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/cairoregular"
                        android:text="@string/price"
                        android:textColor="@color/darkgray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="@{model.mydata.price}"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/cairoregular"
                        tools:text="200"
                        android:textColor="@color/lightblue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/cairoregular"
                        android:text="@string/r_s"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/darkgray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="19dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/subscription_date"
                            android:textColor="@color/darkgray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="16dp"
                            android:text="@{model.mydata.created_at}"
                            android:fontFamily="@font/cairoregular"
                            tools:text="18/05/2025"
                            android:textColor="@color/darkgray"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/expiration_date"
                            android:textColor="@color/darkgray"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_marginTop="16dp"
                            android:text="@{model.mydata.expired_date}"
                            android:fontFamily="@font/cairoregular"
                            tools:text="18/05/2025"
                            android:textColor="@color/red"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="16dp">
                    <TextView
                        android:onClick="@{ () -> model.cancel() }"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/cancel_subscription"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:fontFamily="@font/cairosemibold"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:background="@drawable/rec_strockred"/>
                    <androidx.cardview.widget.CardView
                        android:onClick="@{ () -> model.renew() }"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/lightblue"
                        app:cardCornerRadius="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/renew"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/cairosemibold"
                            android:textStyle="bold"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
            </LinearLayout>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/lightblue"
                android:visibility="@{model.isloading &amp;&amp; model.planList.size() > 0 ? View.VISIBLE : View.GONE}"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.user.UserhomeFragment">
    <data class="UserhomefragmentviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.user.UserhomefragmentViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/background1">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="23dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:textColor="@color/darkblue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLength="12"
                    android:text="@{model.username}"
                    android:fontFamily="@font/cairosemibold"
                    tools:text="مرحبا ابو فهد"/>
                <ImageView
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bonyad_logo_08_1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">
                    <FrameLayout
                        android:layout_width="28dp"
                        android:layout_height="29dp"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_cart"
                            android:rotationY="180"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="top|start"
                            app:cardBackgroundColor="@color/lightblue"
                            app:cardCornerRadius="7dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                tools:text="1"
                                android:layout_gravity="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/cairoregular"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_notification_bing"
                            android:rotationY="180"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="top|start"
                            app:cardBackgroundColor="@color/darkblue"
                            app:cardCornerRadius="5dp">
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                android:background="@drawable/rec_lightblue1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_search22"
                    android:layout_gravity="center"
                    android:rotationY="180"
                    android:layout_marginStart="12dp"/>
                <EditText
                    android:id="@+id/searchTxt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="@string/search"
                    android:textSize="14sp"
                    android:textColor="@color/darkblue"
                    android:textColorHint="@color/darkblue"
                    android:paddingBottom="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="start|center"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/cairoregular"
                    android:backgroundTint="@android:color/transparent"/>
                <ImageView
                    android:onClick="@{ () -> model.filter() }"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_filter"
                    android:layout_marginEnd="15dp"
                    android:rotationY="180"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="18dp">
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    app:ci_drawable="@drawable/onboardselect"
                    app:ci_drawable_unselected="@drawable/onboardingunselect"
                    tools:ignore="RtlCompat" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="21dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkblue"
                    android:text="@string/departments"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/cairosemibold" />

            </FrameLayout>
            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/depList"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="34dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkblue"
                    android:text="@string/specialists"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/cairosemibold" />
                <TextView
                    android:onClick="@{ () -> model.moretechnical() }"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightblue"
                    android:text="@string/more"
                    android:layout_gravity="end|center"
                    android:textSize="12sp"
                    android:fontFamily="@font/cairoregular" />
            </FrameLayout>
            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/specialList"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                bind:technicalhome="@{model.technicallist}"
                bind:fragment="@{model.context}"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                android:layout_marginTop="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkblue"
                    android:text="@string/products"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/cairosemibold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightblue"
                    android:text="@string/more"
                    android:layout_gravity="end|center"
                    android:textSize="12sp"
                    android:fontFamily="@font/cairoregular" />
            </FrameLayout>
            <com.todkars.shimmer.ShimmerRecyclerView
                android:id="@+id/productList"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Activity.WalletActivity">
    <data class="WalletListViewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.WalletListViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
                android:onClick="@{ () -> model.back() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:rotationY="180"
                android:layout_marginStart="26dp"
                android:layout_gravity="center|start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/wallet"
                android:fontFamily="@font/cairobold"
                android:textColor="@color/darkblue"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="134dp"
                        app:cardBackgroundColor="@color/blue"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="27dp"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginTop="27dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/ic_walletlogo"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="12dp"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/cairosemibold"
                                        android:textColor="@color/white"
                                        android:text="@string/current_balance"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/cairobold"
                                    android:textColor="@color/white"
                                    android:text="@{model.wallet + ' ' + @string/r_s}"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="103dp"
                                android:layout_height="103dp"
                                android:background="@drawable/ic_wallet_01"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:onClick="@{ () -> model.charge() }"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/money_recive"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fontFamily="@font/cairobold"
                                android:text="@string/wallet_charge"
                                android:textColor="@color/darkblue"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="46dp"
                            android:background="#EFEFEF"
                            android:layout_gravity="center"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="22dp"/>
                        <LinearLayout
                            android:onClick="@{ () -> model.withdrawdialog() }"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/money_send"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fontFamily="@font/cairobold"
                                android:text="@string/withdraw_balance"
                                android:textColor="@color/darkblue"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="21dp"
                        android:fontFamily="@font/cairosemibold"
                        android:text="@string/transaction_history"
                        android:textColor="@color/darkblack"/>
                    <com.todkars.shimmer.ShimmerRecyclerView
                        android:id="@+id/walletList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="21dp"
                        android:layout_marginTop="11dp"
                        bind:transactions="@{model.transactionsList}"
                        bind:fragment="@{model.context}"
                        android:nestedScrollingEnabled="false"
                        bind:shimmer_recycler_layout="@layout/item_wallet"
                        bind:shimmer_recycler_item_count="5"
                        />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/lightblue"
                android:visibility="@{model.isloading ? View.VISIBLE : View.GONE}"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.Activity.LoginActivity">
    <data class="EditphoneViewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.EditphoneViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1">
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:onClick="@{ () -> model.back() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:rotationY="180"
                android:layout_marginTop="21dp"
                android:layout_marginStart="26dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightblue"
                android:text="@string/change_mobile_number"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/cairobold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="@string/enter_the_new_mobile_number"
                android:textColor="@color/darkblue"
                android:textSize="14sp"
                android:fontFamily="@font/cairoregular"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rec_strockblue"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_quill_phone"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"/>
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@{model.userdata.data.phone}"
                        android:onTextChanged="@{model.onphoneChanged()}"
                        android:inputType="phone"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairosemibold"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_marginEnd="10dp"/>
                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@color/darkblue"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="@font/cairosemibold"
                        android:text="966"
                        android:textColor="@color/darkblue"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="15dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/cairoregular"
                    android:text="@string/mobile_number"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@color/white"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/darkblue"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                android:onClick="@{ () -> model.verifycode() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="90dp"
                app:cardBackgroundColor="@color/lightblue"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cairobold"
                    android:text="@string/send"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </LinearLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTintMode="src_atop"
            android:visibility="@{model.isloading ? View.VISIBLE : View.GONE}"
            android:indeterminateTint="@color/lightblue"
            android:layout_gravity="center"/>
    </FrameLayout>
</layout>
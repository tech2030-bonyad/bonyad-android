<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools"
    tools:context=".ui.Activity.merchant.AddproductActivity">
    <data class="AddproductviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.merchant.AddproductViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
                android:onClick="@{ () -> model.back() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:rotationY="180"
                android:layout_marginStart="26dp"
                android:layout_gravity="center|start"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="@string/add_a_new_product"
                android:fontFamily="@font/cairobold"
                android:textColor="@color/darkblue"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="27dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rec_strockblue"
                            android:orientation="horizontal">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/photos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                bind:certificates="@{model.images}"
                                bind:fragment="@{model.activity}"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/product_image"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@color/white"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/darkblue"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rec_strockblue"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/name"
                                android:onTextChanged="@{model.onnameChanged()}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="@string/name"
                                android:layout_marginStart="16dp"
                                android:textSize="14sp"
                                android:textColorHint="@color/hintcolor"
                                android:layout_marginEnd="16dp"
                                android:textColor="@color/darkblue"
                                android:fontFamily="@font/cairoregular"
                                android:backgroundTint="@android:color/transparent" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/product_name"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@color/white"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/darkblue"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp">
                        <LinearLayout
                            android:id="@+id/depLin"
                            android:onClick="@{ () -> model.depclick() }"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rec_strockblue"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="@{model.depId == 0 ? @string/department : model.dep}"
                                android:textColor="@{model.depId == 0 ? @color/hintcolor : @color/darkblue}"
                                android:layout_gravity="center"
                                android:textSize="14sp"
                                android:fontFamily="@font/cairoregular"
                                android:backgroundTint="@android:color/transparent"
                                android:layout_marginEnd="10dp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_arrowdown"
                                android:layout_marginEnd="15dp"
                                android:layout_marginStart="15dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/product_section"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@color/white"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/darkblue"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rec_strockblue"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/des"
                                android:onTextChanged="@{model.ondesChanged()}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="@string/description"
                                android:layout_marginStart="16dp"
                                android:textSize="14sp"
                                android:textColorHint="@color/hintcolor"
                                android:layout_marginEnd="16dp"
                                android:textColor="@color/darkblue"
                                android:fontFamily="@font/cairoregular"
                                android:backgroundTint="@android:color/transparent" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/product_description"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@color/white"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/darkblue"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rec_strockblue"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/price"
                                android:onTextChanged="@{model.onpriceChanged()}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="@string/price"
                                android:inputType="numberDecimal"
                                android:layout_marginStart="16dp"
                                android:textSize="14sp"
                                android:textColorHint="@color/hintcolor"
                                android:layout_marginEnd="16dp"
                                android:textColor="@color/darkblue"
                                android:fontFamily="@font/cairoregular"
                                android:backgroundTint="@android:color/transparent" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:fontFamily="@font/cairosemibold"
                                android:text="@string/r_s"
                                android:background="@color/white"
                                android:layout_gravity="center"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="15dp"
                                android:textColor="@color/darkblue"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/product_price"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@color/white"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/darkblue"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp">
                        <LinearLayout
                            android:id="@+id/unitLin"
                            android:onClick="@{ () -> model.untclick() }"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rec_strockblue"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:text="@{model.unitId == 0 ? @string/product_unit : model.unit}"
                                android:textColor="@{model.unitId == 0 ? @color/hintcolor : @color/darkblue}"
                                android:layout_gravity="center"
                                android:textSize="14sp"
                                android:fontFamily="@font/cairoregular"
                                android:backgroundTint="@android:color/transparent"
                                android:layout_marginEnd="10dp"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_arrowdown"
                                android:layout_marginEnd="15dp"
                                android:layout_marginStart="15dp"
                                android:layout_gravity="center"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/product_unit"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@color/white"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/darkblue"/>
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/rec_strockblue"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/quantity"
                                android:onTextChanged="@{model.onquantityChanged()}"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:hint="@string/quantity"
                                android:layout_marginStart="16dp"
                                android:textSize="14sp"
                                android:textColorHint="@color/hintcolor"
                                android:layout_marginEnd="16dp"
                                android:textColor="@color/darkblue"
                                android:fontFamily="@font/cairoregular"
                                android:backgroundTint="@android:color/transparent" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairoregular"
                            android:text="@string/product_quantity"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:background="@color/white"
                            android:layout_gravity="start|top"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/darkblue"/>
                    </FrameLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTintMode="src_atop"
                android:visibility="@{model.isloading ? View.VISIBLE : View.GONE}"
                android:indeterminateTint="@color/lightblue"
                android:layout_gravity="center"/>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:onClick="@{ () -> model.validateInput() }"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="27dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="90dp"
            app:cardBackgroundColor="@color/lightblue"
            app:cardCornerRadius="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/cairobold"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
    </LinearLayout>
</layout>
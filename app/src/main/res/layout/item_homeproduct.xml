<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">
    <data class="HomeproductviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.user.HomeproductViewModel" />
    </data>
    <LinearLayout
        android:onClick="@{ () -> model.clickitem() }"
        android:layout_width="165dp"
        android:layout_height="210dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:background="@drawable/rec_strockgray">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="84dp"
            android:layout_gravity="center|bottom"
            android:scaleType="centerCrop"
            bind:imageUrl="@{model.onservse.image}"
            android:layout_marginTop="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairoregular"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="18dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{model.onservse.name}"
            tools:text="طوب احمر "
            android:textColor="@color/darkblue"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairosemibold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="@{model.onservse.price + ' ' + @string/r_s}"
                tools:text="95.33 ر.س"
                android:textColor="@color/darkblue"/>
        </LinearLayout>
        <RatingBar
            android:id="@+id/rate"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#8FC3FF"
            android:rating="@{model.onservse.average_rating}"
            android:secondaryProgressTint="@android:color/transparent"
            android:stepSize="1"
            android:theme="@style/RatingBar"
            tools:ignore="RtlCompat" />
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">
    <data class="CatogaryviewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.user.DepViewModel" />
    </data>
    <LinearLayout
        android:onClick="@{ () -> model.clickitem() }"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            bind:imageUrl="@{model.onservse.image}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="11dp"
            android:layout_gravity="center"
            android:fontFamily="@font/cairoregular"
            android:textColor="@color/darkblue"
            tools:text="خرسانة جاهزة"
            android:text="@{model.onservse.name}"/>
    </LinearLayout>
</layout>
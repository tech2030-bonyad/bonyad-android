<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Fragment.user.UserprofileFragment">
    <data class="UserprofileViewModelBinding">

        <import type="android.view.View" />

        <variable
            name="model"
            type="fudex.bonyad.viewmodel.user.UserprofileViewModel" />

    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bonyad_logo_08_1"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"/>
            <LinearLayout
                android:visibility="@{model.islogin ? View.VISIBLE : View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="134dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="55dp">
                <FrameLayout
                    android:onClick="@{ () -> model.profile() }"
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:background="@drawable/wadget">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_ion_person_outline2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/white"
                            android:text="@string/my_data"/>
                    </LinearLayout>

                </FrameLayout>
                <FrameLayout
                    android:visibility="gone"
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_marginStart="18dp"
                    android:background="@drawable/wadget">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:rotationY="180"
                            android:background="@drawable/ic_solar_wallet_linear"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/white"
                            android:text="@string/wallet"/>
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>
            <FrameLayout
                android:onClick="@{ () -> model.settings() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="27dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_iconoir_language"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairoregular"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:rotationY="180"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#208FC3FF"/>
            </FrameLayout>
            <FrameLayout
                android:onClick="@{ () -> model.address() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="26dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_location2"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addresses"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairoregular"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:rotationY="180"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#208FC3FF"/>
            </FrameLayout>
            <FrameLayout
                android:onClick="@{ () -> model.accountbank() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="26dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_bank"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bank_account"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairoregular"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:rotationY="180"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#208FC3FF"/>
            </FrameLayout>
            <FrameLayout
                android:onClick="@{ () -> model.about() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="26dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_mdi_light_information"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_the_platform"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairoregular"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:rotationY="180"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#208FC3FF"/>
            </FrameLayout>
            <FrameLayout
                android:onClick="@{ () -> model.contactusus() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="26dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_info"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairoregular"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:rotationY="180"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#208FC3FF"/>
            </FrameLayout>
            <FrameLayout
                android:onClick="@{ () -> model.terms() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="26dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_carbon_rule"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_and_conditions"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairoregular"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:rotationY="180"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#208FC3FF"/>
            </FrameLayout>
            <FrameLayout
                android:onClick="@{ () -> model.privacy() }"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="26dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_tabler_user_question"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/cairoregular"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_up"
                        android:rotationY="180"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="#208FC3FF"/>
            </FrameLayout>
            <LinearLayout
                android:visibility="@{model.islogin ? View.VISIBLE : View.GONE}"
                android:onClick="@{ () -> model.logout() }"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_solar_logout_outline"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/logout"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/lightblue"
                    android:fontFamily="@font/cairosemibold"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>